            </group>
            <group id="Interrapidisimo_Credibanco" translate="label comment" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Credibanco</label>
                <fieldset_css>complex</fieldset_css>
                <comment>Accept payments through beGateway payment platform</comment>
                <include path="Interrapidisimo_Credibanco::system/method_checkout.xml"/>
<!--                <include path="Interrapidisimo_Credibanco::system/method_direct.xml"/>-->
            </group>
        </section>
    </system>
</config>
